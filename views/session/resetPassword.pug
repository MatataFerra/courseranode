body#LoginForm
    .container
        .login-form
            .main-div
                .panel
                    if info && info.message
                        .alert.alert-danger
                            = info.message
                        
                    h2 Admin Login
                    p Por Favor ingrese su email y password

                form#Login(action='/login' method='post')
                    input#email(type='hidden' name='email' value= user.email)
                    .form-group
                    label(for="pwd") Password:
                        input#pwd.form-control(type='password' name='password' class= errors.password)
                        if errors.passwords
                            small#passwordHelp.text-danger
                                =errors.password.message
                    .form-group
                    label(for="confirm_pwd") Confirmar Password:
                        input#confirm_pwd.form-control(type='password' name='confirm_password' class= errors.confirm_password)
                        if errors.confirm_password
                            small#confirm_passwordHelp.text-danger
                                =errors.confirm_password.message
